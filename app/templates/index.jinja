<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArcadeScore - Manage Your Scoreboards</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}">
    <script defer type="module" src="{{ url_for('static', filename='js/index.js') }}"></script>
    <script defer type="module" src="{{ url_for('static', filename='js/importExport.js') }}"></script>
</head>
<body>
    <div class="landing-container">
        <header class="landing-header">
            <h1>ArcadeScore</h1>
            <p>Manage and track high scores across your arcade games.</p>

            <!-- Import/Export Icon -->
            <i id="import-export-icon" class="fas fa-download"></i>
        </header>

        <main class="landing-main">
            <div class="content-wrapper">
                <!-- Create Scoreboard Section -->
                <div class="create-scoreboard">
                    <h2>Create a Scoreboard</h2>
                    <p>Set up a new scoreboard and start tracking scores.</p>
                    <button id="create-scoreboard-btn" class="btn">Create New</button>
                </div>

                <!-- Scoreboards Display Section -->
                <div class="scoreboards-section">
                    <h2>Your Scoreboards</h2>
                    <div id="scoreboard-list" class="scoreboard-list">
                        <p>Loading your scoreboards...</p>
                    </div>
                </div>
            </div>
        </main>

        <footer class="landing-footer">
            <p>&copy; 2025 ArcadeScore. All Rights Reserved.</p>
        </footer>
    </div>

    <!-- Create Scoreboard Modal -->
    <div id="create-modal" class="modal hidden">
        <div class="modal-content">
            <h2>Create a New Scoreboard</h2>
            <label for="scoreboard-name">Scoreboard Name:</label>
            <input type="text" id="scoreboard-name" placeholder="Enter scoreboard name...">
            <div class="modal-buttons">
                <button id="save-scoreboard-btn" class="btn">Save</button>
                <button id="close-modal-btn" class="btn secondary-btn">Cancel</button>
            </div>
        </div>
    </div>

    <!-- Import/Export Modal -->
    <div id="import-export-modal" class="modal hidden">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Import / Export Data</h2>
            <p>Backup or restore your ArcadeScore data.</p>

            <!-- Export Button -->
            <button id="export-data-btn" class="btn">Export Data</button>

            <!-- Import Button -->
            <input type="file" id="import-file-input" class="hidden" accept=".7z">
            <button id="import-data-btn" class="btn secondary-btn">Import Data</button>

            <!-- Import Status -->
            <p id="import-status" class="hidden">Processing import...</p>
        </div>
    </div>
</body>
</html>
